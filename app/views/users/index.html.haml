= render 'grid'
.row-fluid
  .col-md-12.well{:style => "margin-bottom: 0px;border-bottom-width: 0px;padding-bottom: 0px;border-radius: 0px;"}
    %form.form-horizontal.row{:role => "form"}
      .col-xs-4
        .form-group
          %label.col-sm-6.control-label{:for => "exampleInput1"}
            %span= User.human_attribute_name(:name)
          .col-sm-6
            = grid_filter @users_grid, :name_filter
      .col-xs-4
        .form-group
          %label.col-sm-6.control-label{:for => "exampleInput2"}= User.human_attribute_name(:cell)
          .col-sm-6
            = grid_filter @users_grid, :cell_filter
      .col-xs-4
        .external-buttons
          %button.btn.btn-primary.wg-external-submit-button{"data-grid-name" => "users_grid"} 查询
          = link_to t(:new_user), new_user_path, class: "btn btn-danger"
  .row-fluid
    .col-md-12{:style => "padding-left: 0px;padding-right: 0px;"}
      = render_grid(@users_grid)
