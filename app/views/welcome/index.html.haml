
- if current_user && (current_user.state == "否决")
  .row
    .col-sm-6.col-sm-offset-3
      .panel.panel-danger
        .panel-heading
          %h4.panel-title.text-center 提示
        .panel-body
          %p.text-center
            您的账户已被禁用
- elsif current_user
  %section.content-header
    %h1 下午好，admin
  %section.content
    .row
      .col-md-3.col-sm-6.col-xs-12
        .info-box
          %span{ class: "info-box-icon bg-aqua"}
            %a{ href: serials_path }
              %i{ class: "fa fa-files-o"}
          .info-box-content
            %span{ class: "info-box-text"}
              = link_to '二维码管理', serials_path
            %span{ class: "info-box-text" }
              = link_to Serial.all.count, serials_path
      .col-md-3.col-sm-6.col-xs-12
        .info-box
          %span{ class: "info-box-icon bg-yellow"}
            %a{ href: users_path }
              %i{ class: "fa fa-envelope-o"}
          .info-box-content
            %span{ class: "info-box-text"}
              = link_to '会员管理', users_path
            %span{ class: "info-box-text" }
              = link_to User.all.count, users_path
      .col-md-3.col-sm-6.col-xs-12
        .info-box
          %span{ class: "info-box-icon bg-green"}
            %a{ href: products_path }
              %i{ class: "fa fa-flag-o"}
          .info-box-content
            %span{ class: "info-box-text"}
              = link_to '商品管理', products_path
            %span{ class: "info-box-text" }
              = link_to Product.all.count, users_path
      .col-md-3.col-sm-6.col-xs-12
        .info-box
          %span{ class: "info-box-icon bg-red"}
            %a{ href: shop_stores_path }
              %i{ class: "fa fa-files-o"}
          .info-box-content
            %span{ class: "info-box-text"}
              = link_to '商家管理', shop_stores_path
            %span{ class: "info-box-text" }
              = link_to ShopStore.all.count, users_path
