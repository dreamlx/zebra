<div class="row-fluid">
  <div class="col-md-12">
    <div class="panel panel-info">
      <!-- Default panel contents -->
      <div class="panel-heading">
        <h4 class="panel-title text-center"><%= t(:thirdparty_list) %></h4>
      </div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th><%= Thirdparty.human_attribute_name("code") %></th>
            <th><%= Thirdparty.human_attribute_name("name") %></th>
            <th><%= Thirdparty.human_attribute_name("image") %></th>
            <th colspan="3"><%= t(:operations) %></th>
          </tr>
        </thead>
        <tbody>
          <% @thirdparties.each do |thirdparty| %>
            <tr>
              <td><%= thirdparty.id %></td>
              <td><%= thirdparty.code %></td>
              <td><%= thirdparty.name %></td>
              <td><%= image_tag thirdparty.image.thumb %></td>
              <td><%= link_to t(:edit), edit_thirdparty_path(thirdparty) if can? :edit, Thirdparty %></td>
              <td><%= link_to t(:destroy), thirdparty, method: :delete, data: {confirm: t(:are_you_sure)} if can? :delete, Thirdparty %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="col-md-4">
    <%= link_to t(:new_thirdparty), new_thirdparty_path, class: "btn btn-danger" %>
  </div>
</div>
