<div class="col-md-10">
  <h3><%= t(:prize_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t("new_prize"), new_prize_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <% Prize::HEADERS.each do |column| %>
          <th><%= Prize.human_attribute_name(column) %></th>
        <% end %>
        <th colspan="2"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @prizes %>
    </tbody>
  </table>
</div>