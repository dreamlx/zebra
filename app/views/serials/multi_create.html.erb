    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title text-center">产品二维码</h4>
      </div>
      <div class="">
        <%= render :partial => 'serials/serials_grid' %>
        <%= render_grid(@serials_grid) %>
      </div>
