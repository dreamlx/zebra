= render 'products_list_grid'
.row-fluid
  .col-md-12.well{:style => "margin-bottom: 0px;border-bottom-width: 0px;padding-bottom: 0px;border-radius: 0px;"}
    %form.form-horizontal.row{:role => "form"}
      .col-xs-4
        .form-group
          %label.col-sm-6.control-label{:for => "exampleInput1"}
            %span= Product.human_attribute_name(:product_name)
          .col-sm-6
            = grid_filter @products_grid, :name_filter
      .col-xs-4

      .col-xs-4
        .external-buttons
          %button.btn.btn-primary.wg-external-submit-button{"data-grid-name" => "products_list_grid"} 查询
          -# = link_to t(:new_product), new_product_path, class: "btn btn-danger"
  .row-fluid
    .col-md-12
      = render_grid(@products_grid)
