<div class="row-fluid">
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h4 class="panel-title text-center"><%= @product.product_name %></h4>
      </div>
      <div class="panel-body">
        <p class="text-center">
          <%= @product.product_image %>
        </p>
      </div>
      <table class="table table-striped">
        <tbody>
          <%= render @product.extentions %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h4 class="panel-title text-center">产品维护</h4>
      </div>
      <div class="panel-body">
        <%= simple_form_for([@product, @product.extentions.build]) do |f| %>
        <div class="panel-body">
          <%= f.input :extention_name %>
          <%= f.input :extention_value %>
        </div>
        <div class="panel-footer text-center">
          <%= f.button :submit, class: "btn btn-danger" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
