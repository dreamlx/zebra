.row-fluid
  .col-md-6
    .panel.panel-info
      .panel-heading
        %h4.panel-title.text-center= @product.product_name
      .panel-body
        %p.text-center
          = @product.product_image
      %table.table.table-striped
        %tbody
          = render @product.extentions
  .col-md-4.col-md-offset-2
    .panel.panel-info
      .panel-heading
        %h4.panel-title.text-center 产品维护
      .panel-body
        = simple_form_for([@product, @product.extentions.build]) do |f|
          .panel-body
            = f.input :extention_name
            = f.input :extention_value
          .panel-footer.text-center
            = f.button :submit, class: "btn btn-danger"
